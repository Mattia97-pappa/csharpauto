@model IEnumerable<Inventary.Models.Componente>

@{
    Layout = null;
    var searchCode = Context.Request.Query["searchCode"].ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Inventary</a>
            <div class="d-flex">
                <form method="post" asp-controller="Admin" asp-action="Logout" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <a asp-action="Create" asp-controller="Componenti" class="btn btn-success mb-3">Aggiungi Nuovo Articolo</a>


    <div class="container mt-4">
        @if (TempData["Messaggio"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Messaggio"]
            </div>
        }

        <h2>Dashboard</h2>

        <form method="get" class="mb-3 d-flex" asp-action="Dashboard" asp-controller="Admin">
            <input type="text" name="searchCode" class="form-control me-2" placeholder="Cerca per codice..." value="@searchCode" />
            <button type="submit" class="btn btn-primary">Cerca</button>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th>Prezzo</th>
                    <th>Codice</th>
                    <th>Giacenza</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nome</td>
                        <td>@item.categoria</td>
                        <td>@item.prezzo.ToString("C")</td>
                        <td>@item.codice</td>
                        <td>@item.giacenza</td>
                        <td>
                            <a href="@Url.Action("Edit", "Componenti", new { id = item.id })" class="btn btn-warning btn-sm">Modifica</a>
                            <a href="@Url.Action("Delete", "Componenti", new { id = item.id })" class="btn btn-danger btn-sm">Elimina</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
